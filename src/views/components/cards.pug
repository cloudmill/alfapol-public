mixin vacancies-description(title, desc, descArray)
    .vacancies__item-specs 
        .vacancies__item-specs-title=title

        if desc
            .vacancies__item-requirements=desc
        if descArray 
            .vacancies__item-requirements
                ul.vacancies__item-requirements-list 
                    each item in [...descArray]
                        li.vacancies__item-requirements-item=item


mixin article-preview(date,title,text,pic,hasVideo)
    a(href="#").articles__preview(class=attributes.class)
        .articles__preview-date=date
        .articles__preview-text 
            h4.articles__preview-title=title 
            .articles__preview-note=text 
        .articles__preview-picture-wrapper
            +picture(`${pic}.png`).articles__preview-picture
            if hasVideo
                .articles__preview-video-play 
                    .articles__preview-video-svg

mixin modal-order-standard(title, subtitle, target)
    .contact-form(data-element="popup", data-popup="about-popup", data-form-target=target)
        button.contact-form__close(data-action="close-popup")
            +close-btn.contact-form__close-svg

        .contact-form__wrapper
            //- .contact-form__inner-wrapper(data-form="standard")
            .contact-form__inner(data-element="popup-content")
                .contact-form__header
                    h4.contact-form__title=title
                    if subtitle 
                        .contact-form__subtitle=subtitle
                
                form.contact-form__inputs(id=target)
                    input(type="text", name="name", placeholder="Имя или название организации", required).contact-form__input
                    input(type="tel", name="tel", placeholder="Телефон*", data-mask-phone, data-parsley-phone-required, required).contact-form__input

                .contact-form__agreement 
                    | Нажимая кнопку «Отправить», я даю согласие на обработку 
                    a(href="#").contact-form__personal персональных данных
                button.contact-form__submit(form=target, type="submit", value="Отправить")
                    span.contact-form__submit-text Отправить 
                    +button-arrow.contact-form__submit-svg

            .contact-form__success(data-element="popup-success")
                +contact-us-success.contact-form__success-svg
                h4.contact-form__success-title отправлено
                p.contact-form__success-desc Спасибо. Мы свяжемся с вами в ближайшее время.
                button.section-link.contact-form__success-close
                    .section-link__span Закрыть
                    +button-arrow.section-link__svg 



