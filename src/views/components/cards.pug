mixin material-props-checkbox(myId, title)
    li.material-properties__item
        input.material-properties__checkbox(id=myId, type="checkbox", name=myId, data-material-parameters)  
        label.material-properties__checkbox-label(for=myId)
            p.material-properties__checkbox-title
                span.material-properties__checkbox-span=title

mixin product-hero-table(param, value)
    .product-hero__accordion-table-data 
        p.product-hero__accordion-table-param=param
        p.product-hero__accordion-table-value=value

mixin product-hero-document(title, volume)
    a(href="#").product-hero__accordion-document(class=attributes.class)
        .product-hero__accordion-document-title=title 
        .product-hero__accordion-document-data 
            p.product-hero__accordion-document-volume=volume
            +accordion-document.product-hero__accordion-document-svg

mixin icon-label(text)
    .icon-label(class=attributes.class, data-card-icon)
        .icon-label__inner 
            +icon-label-arrow.icon-label__arrow 
            .icon-label__text=text

mixin order-card(title, subtitle)
    li.order__item.order-item
        .order-item__image-wrapper
            +picture("catalog-card.png").order-item__image
        .order-item__desc
            h4.header__cart-title.order-item__desc-title=title
            p.header__cart-subtitle.order-item__desc-subtitle=subtitle

mixin about-company-accordion(counter, title, formType, btnAttr, popupTitle, popupSubtitle, hasComment, list)
    .about-company__accordion 
        .accordion-container
            .ac 
                .ac-trigger
                    .about-company__accordion-header
                        .about-company__accordion-counter=counter
                        .about-company__accordion-title=title
                        .about-company__accordion-btn
                            +swiper-btn.about-company__accordion-svg
                .ac-panel
                    .about-company__accordion-panel 
                        .about-company__accordion-content
                            if list
                                ul.about-company__accordion-list
                                    each item in [...list]
                                        li.about-company__accordion-item=item
                            //- button.section-link.about-company__accordion-bid-btn(data-popup-btn="about-popup",data-form-type=formType, data-client-target=btnAttr, data-popup-title=popupTitle, data-popup-subtitle=popupSubtitle, data-popup-comment=hasComment)
                            button.section-link.about-company__accordion-bid-btn(data-popup-btn="about-popup", data-client-target=btnAttr, data-popup-title=popupTitle, data-popup-subtitle=popupSubtitle, data-popup-comment=hasComment)
                                .section-link__span Оставить заявку
                                +button-plus-svg.section-link__svg
            if formType=="standard"
                +modal-order-standard(popupTitle, popupSubtitle, btnAttr)
            if formType=="extended"
                +modal-order-extended(popupTitle, popupSubtitle, btnAttr)


