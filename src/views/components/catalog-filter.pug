            .material-properties__controls.contact-form__controls
                button.section-link.material-properties__reset
                    .section-link__span Сбросить
                    +reset-btn.section-link__svg 
                button.section-link.material-properties__apply
                    .section-link__span Применить
                    +button-arrow.section-link__svg 
        .catalog-filter__inputs
            .select-wrapper.catalog-filter__select.desktop 
                .select 
