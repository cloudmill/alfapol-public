mixin catalog-filter
    section.section.catalog-filter
        .contact-form.contact-form_controls.material-properties(data-element="popup")
            button.contact-form__close(data-action="close-popup" data-catalog="catalog-close")
                +close-btn.contact-form__close-svg

            .contact-form__wrapper
                .contact-form__inner.contact-form__inner_controls
                    .contact-form__header
                        h4.contact-form__title Свойства материала
                        .separator-line.contact-form__header-separator(data-element="popup-header-separator")
                    .material-properties__list-wrapper(data-element="scroll-event")
                        ul.material-properties__list

                            +material-props-checkbox(1, 'Антистатичность')
                            +material-props-checkbox(2, 'Наливные материалы')
                            +material-props-checkbox(3, 'Безыскровость')
                            +material-props-checkbox(4, 'Напольные материалы')
                            +material-props-checkbox(5, 'Водонепроницаемость')
                            +material-props-checkbox(6, 'Износостойкость')
                            +material-props-checkbox(7, 'Водостойкость')
                            +material-props-checkbox(8, 'Химстойкость')
                            +material-props-checkbox(9, 'Негорючесть')
                            +material-props-checkbox(10, 'Термостойкость')
                            +material-props-checkbox(11, 'Высокая марочная прочность')
                            +material-props-checkbox(12, 'Тонкослойные покрытия')
                            +material-props-checkbox(13, 'Декоративные материалы')
                            +material-props-checkbox(14, 'Противоскользящие материалы')
                            +material-props-checkbox(15, 'Наполненные полимерные материалы')
                            +material-props-checkbox(16, 'Эластичные напольные покрытия')
